apiVersion: sealer.aliyun.com/v1alpha1
kind: Cluster
metadata:
  name: my-cluster
spec:
  image: sealer-test:v0.1
  # Using sealer apply, the provider should be BAREMETAL
  provider: BAREMETAL
  ssh:
    # SSH login password, if you use the key to log in, you donâ€™t need to set it
    passwd: xxx
    ## The absolute path of the ssh private key file, for example /root/.ssh/id_rsa
    pk: ""
    #  The password of the ssh private key file, if there is none, set it to ""
    pkPasswd: ""
    # ssh login user
    user: root
  network:
    # in use NIC name
    interface: eth0
    # Network plug-in name
    cniName: calico
    podCIDR: 100.64.0.0/10
    svcCIDR: 10.96.0.0/22
    withoutCNI: false
  certSANS:
    - aliyun-inc.com
    - 10.0.0.2
  masters:
    ipList:
     - 192.168.5.132
---
apiVersion: sealer.aliyun.com/v1alpha1
kind: Plugin
metadata:
  name: SHELL
spec:
  action: PreInit
  data: |
    sh ./nvidia-docker.sh
---
apiVersion: sealer.aliyun.com/v1alpha1
kind: Plugin
metadata:
  name: SHELL
spec:
  action: PostInstall
  on: role=master
  data: |
     sh ./post-install.sh
